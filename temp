function help {
    echo ""
    echo "Usage: create-st-app [options]"
    echo ""
    echo "Options:"
    echo "  -n : the name of the app you'd like to create."
    echo "  Note that this will be the name of your project's"
    echo "  root directory."
    echo ""
    echo "  -p : (optional) the path to the directory you would"
    echo "  you would like your project to be create. Note that"
    echo "  a directory with the name of project will be created"
    echo "  in the directory this path leads to."
    echo ""
    echo "Defaults:"
    echo "  -p : ~/Projects"
    echo ""
    echo "example 1: create-st-app -n your-project-name"
    echo ""
    echo "This example will create a project located at ~/Projects/your-project-name."
    echo ""
    echo "example 2: create-st-app -n your-project-name -p /home/user/myDir"
    echo ""
    echo "this example will create a project located at /home/user/myDir/your-project-name"
}


echo ""
    echo "Name is required to create a project."
    echo ""
    echo "Use -n to add a project name."
    echo ""
    echo "example: create-ts-app -n your-project-name"
    echo ""
    echo "Use -h for more help."
    echo ""
    exit 1